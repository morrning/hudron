{% extends 'general/base.html.twig' %}

{% block title %}عضویت در هادرون{% endblock %}

{% block plugin_body %}
<div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="text-primary">عضویت در هادرون</h1>
            </div>
            <div class="card-body">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.mobile) }}
                {{ form_row(registrationForm.codemeli) }}
                {{ form_row(registrationForm.birthday) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary">عضویت</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>        
    </div>
</div>

{% endblock %}
